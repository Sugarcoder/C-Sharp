/* SELECTION STATEMENTS

Selection Statements (if, switch)

Conditional operator (?:)

Loop statements (while, do...while, for, foreach) */



// If...

if (5 < 2 * 3)
	Console.WriteLine ("True");     // true

// OR


if (5 < 2 * 3)
{
	Console.WriteLine ("True");
	Console.WriteLine ("Let's move on!");
}


// If...Else

if (2 + 2 == 5)
	Console.WriteLine ("Does not compute.");
else
	Console.WriteLine ("False");   // False



// You can have nested if statements, too.


if (2 + 2 == 5)
	Console.WriteLine ("Does not compute."); 
else
	if (2 + 2 == 4)
		Console.WriteLine ("Computes");   // Computes



// These two ways of writing is identical:

if (true)
	if (false)
		Console.WriteLine ();
	else
		Console.WriteLine ("executes");


/*********/

if (true)
{
	if (false)
		Console.WriteLine();
	else 
		Console.WriteLine ("executes");
}



// You can move around the curly braces to make it easier to read.

if (true)
{
	if (false)
		Console.WriteLine ();
}

else
	Console.WriteLine ("does not execute");



// Another example: 


static void TellMeWhatICanDo (int age)
{
	if (age >= 35)
		Console.WriteLine ("You can be president!");
	else if (age >= 21)
		Console.WriteLine ("You can drink!");
	else if (age >= 18)
		Console.WriteLine ("You can vote!");
	else
		Console.WriteLine ("You can wait!");
}
