// How to shorten Array Initialization Expressions:


char[] vowels = {'a', 'e', 'i', 'o', 'u'};

int[,] rectangularMatrix = 
{
	{0,1,2},
	{3,4,5},
	{6,7,8}
};



int[][] jaggedMatrix = 
{
	new int[] {0,1,2},
	new int[] {3,4,5},
	new int[] {6,7,8}
};



// OR USE THE 'VAR' KEYWORD: 

var i = 3;            // i is implicitly of type 'int'
var s = "sausage";    // s is implicitly type 'string'



var rectMatrix = new int[,]      // rectMatrix is implicitly of type 'int[,]'
{
	{0,1,2},
	{3,4,5},
	{6,7,8}
};



var jaggedMat = new int[][]    // jaggedMat is implicitly type 'int[][]'
{
	new int[] {0,1,2},
	new int[] {3,4,5},
	new int[] {6,7,8}
};

